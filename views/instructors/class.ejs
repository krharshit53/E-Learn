<div class="container">
    <div class="row text-center flex-wrap" id="campground-grid">
        <div class="row">
            <h1 class="text-align">My Courses</h1>
        </div>
     <% classes.forEach(function(cl){ %>
         <div class="col-md-3 col-sm-6">
             <div class="thumbnail">
                <img style=" width:  100%; height: 100%; object-fit: cover;" src="<%= cl.image %>">
                <div class="caption">
                    <h4><%= cl.title %></h4>
                </div>
                <p>
                    <a href="/classes/<%=cl.class_id%>" class="btn btn-primary"></a>
                </p>
             </div>
         </div>
     <% }); %>
   </div>
   </div>

