<%- include('../partials/header') %>

<div class="container-fluid" style="height:110vh;background-color:whitesmoke; margin-top: 0%;" >
    <div class="row">
         
        <div class="col-md-2 " style=" height:100vh" >
           <div class="row">
               <h1>All Lessions</h1>
            <div class="list-group">
                <%classname.lessons.forEach((lesson)=>{%>
                <a href="/classes/<%=classname._id%>/lesson/<%=lesson.lessonNumber%>" class="list-group-item list-group-item-action"><strong> <%= lesson.lessonTitle%></strong></a>
                <%})%>
              </div>
              <%if(currentuser.type=='instructor'){%>
                <a class="btn btn-primary" href="/instructor/classes/<%=classname._id%>/lessons/new" style="margin-left: 0.5%;">Add new Lesson</a>
                <%} %>
            </div>
      </div>

      <div class="col-md-8" style=" background-color: white; height:100vh ;margin-top:2%;margin-bottom: 2%; margin-left:1%;">
          
        <div class="col-md-12">
            
            <h1 class="text-center"><%=classname.title%></h1>
            <p class="text-center"><%=classname.description%></p>
        
      </div>
      </div>
    </div>
    </div>

    

<%- include('../partials/footer.ejs') %>












   
    